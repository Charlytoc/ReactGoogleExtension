{
  "manifest_version": 3,
  "name": "Automator",
  "version": "0.0.53",
  "action": {
    "default_popup": "index.html"
  },
  "description": "A AI Agent to help you manage your tasks and make them automatically with AI right in your browser",
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "auto-complete": {
      "suggested_key": {
        "windows": "Ctrl+Shift+V",
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Trigger AutoComplete"
    },
    "open-automator": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Automator popup"
    },
    "translate-selection": {
      "suggested_key": {
        "windows": "Ctrl+Shift+L",
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle translation (ENâ†”ES)"
    },
    "check-grammar": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Fix grammar of selected text"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "contextMenus",
    "scripting",
    "commands",
    "tts"
  ]
}