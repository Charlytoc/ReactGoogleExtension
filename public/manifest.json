{
  "manifest_version": 3,
  "name": "Be Better",
  "version": "0.0.3",
  "action": {
    "default_popup": "index.html"
  },
  "description": "A simple Google Extension to help you manage your tasks",
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "contextMenus",
    "scripting"
  ]
}